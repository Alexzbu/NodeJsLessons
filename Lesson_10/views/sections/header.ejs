<header class="header">
  <nav class="nav">
    <a href="/" class="nav__link">Головна</a>
    <a href="/locations" class="nav__link">Де нас знайти</a>
    <a href="/cars" class="nav__link">Автопарк</a>
    <% if (user) { %>
      <a href="/cars/add" class="nav__link">Додати авто</a>
      <a href="/locations/add" class="nav__link">Додати локацію</a>
      <% } %>
  </nav>
  <div class="auth">
    <% if (user) { %>
      <span>
        <%= user?.username %>
      </span>
      <a href="/logout" class="nav__link">Log out</a>
      <% } else {%>
        <a href="/auth/login" class="nav__link">Sign in</a>
        <a href="/auth/register" class="nav__link">Sign up</a>
        <% } %>
  </div>
</header>