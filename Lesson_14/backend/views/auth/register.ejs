<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Register</title>
  <link rel="stylesheet" href="/stylesheets/styles.css">
  <script src="/javascripts/HandlerImageFiles.js"></script>
</head>
  <body class="body">
    <%-include('../sections/header.ejs')%>

    <div class="container">
      <h1 class="title">Registration</h1>
      <form class="form" action="/auth/register" method="POST">
        <label class="form__label" for="username">Email:</label>
        <input class="form__input" type="text" name="username" value="<%= user?.username%>"/>
        <% if (errors && errors.username) { %>
          <ul class="error-messages">
            <% errors.username.forEach(msg => { %>
              <li><%= msg %></li>
            <% }) %>
          </ul>
        <% } %>
        <label class="form__label" for="password">Password:</label>
        <input class="form__input" type="password" name="password" value="<%= user?.password%>"/>
        <% if (errors && errors.password) { %>
          <ul class="error-messages">
            <% errors.password.forEach(msg => { %>
              <li><%= msg %></li>
            <% }) %>
          </ul>
        <% } %>

        
        <button class="form__button" type="submit">Sign up</button>
      </form>
    </div>
  </body>
</html>
