<!DOCTYPE html>
<html lang="uk">
<head>
  <meta charset="UTF-8">
  <title><%= location?.id ? 'Оновити локацію' : 'Додати локацію' %></title>
  <link rel="stylesheet" href="/stylesheets/styles.css">
  <script src="/javascripts/HandlerImageFiles.js"></script>
</head>
  <body class="body">
    <%-include('../sections/header.ejs')%>

    <div class="container">
      <h1 class="title"><%= location?.id ? 'Оновити локацію' : 'Додати нову локацію' %></h1>
      <form class="form" action="/locations/add/<%= location?.id%>" method="POST">
        <label class="form__label" for="title">Назва локації:</label>
        <input class="form__input" type="text" name="title" value="<%= location?.title%>"/>
        <% if (errors && errors.title) { %>
          <ul class="error-messages">
            <% errors.title.forEach(msg => { %>
              <li><%= msg %></li>
            <% }) %>
          </ul>
        <% } %>
        

        <label class="form__label" for="address">Адреса:</label>
        <textarea class="form__textarea" name="address"><%= location?.address %></textarea>
        <% if (errors && errors.address) { %>
          <ul class="error-messages">
            <% errors.adress.forEach(msg => { %>
              <li><%= msg %></li>
            <% }) %>
          </ul>
        <% } %>
        
        <button class="form__button" type="submit"><%= location?.id ? 'Оновити' : 'Додати' %></button>
      </form>
    </div>
  </body>
</html>
